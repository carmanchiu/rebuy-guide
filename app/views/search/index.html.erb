<h2>Product Search Results</h2>

<% if @results.present? %>
  <% if @products.present? %>
    <ul>
      <% @products.each do |product| %>
        <li>
          <%= link_to product.name, product_path(product.id) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No products found.</p>
  <% end %>
<% else %>
  <p>Please enter a search query.</p>
<% end %>
