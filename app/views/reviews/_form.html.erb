<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <hr>

  <form>
    <fieldset>
      <div class="form-group">
        <%= form.label :product_id, 'Product ID', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.number_field :product_id, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :product_name, class: 'col-sm-2 col-form-label mt-4' %>
        <div class="col-sm-10">
          <%= form.text_field :product_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :rating, class: 'form-label mt-4' %>
        <%= form.select :rating, [[ 'Select one', nil ]] + (1..10).map { |i| [i, i] }, { class: 'form-select' } %>
      </div>

      <div class="form-group">
        <%= form.label :would_repurchase, class: 'form-label mt-4' %>
        <%= form.select :would_repurchase, [['Select one', nil], ['Yes', "yes"], ['No', "no"], ['Maybe', "maybe"]], { class: 'form-select' } %>
      </div>

      <div class="form-group">
        <%= form.label :body, class: 'form-label mt-4' %>
        <%= form.text_area :body, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :visibility, class: 'form-label mt-4' %>
        <%= form.select :visibility, [['Select one', nil], ['Only me', "only_me"], ['Followers', "followers_only"], ['Everyone', "everyone"]], { class: 'form-select' } %>
      </div>

  <!--Future Feature: Drafts -->
  <!--      <div class="form-group">-->
          <%#= form.label :published, class: 'form-check-label mt-4' %>
          <%#= form.check_box :published, class: 'form-check-input' %>
  <!--      </div>-->

      <div class="form-group">
        <%= form.label :image, class: 'form-label mt-4' %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>

      <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </fieldset>
  </form>
  
  <hr>
<% end %>
