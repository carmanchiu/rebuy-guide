<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-body">

        <h5 class="card-title">
          Product: <%= review.product.name %>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
          <div>
            Rating: <%= review.rating %>/10
          </div>
          <div>
            Would Repurchase? <%= review.would_repurchase %>
          </div>
          <div>
            Visibility: <%= review.visibility %>
          </div>
          <div>
            Follower? <%= review.owner.followers.include?(user) %>
          </div>
          <div>
            Published? <%= review.published? %>
          </div>
        </h6>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item">Body: <%= review.body %></li>
      </ul>

      <ul class="list-group list-group-flush">
        <li class="list-group-item">Media:
          <div>
            <% review.media.each do |media| %>
              <%= image_tag media.file %>
            <% end %>
          </div>
        </li>
      </ul>

      <div class="card-body">
        <%= link_to "#{review.owner.username}", user_path(username: review.owner.username) %>
        <%= link_to "Show this review", review %>
      </div>
      
    </div>
  </div>
</div>
